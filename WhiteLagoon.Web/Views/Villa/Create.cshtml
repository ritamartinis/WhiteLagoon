@model Villa //para aceder ao modelo, indico qual o modelo (é o Villa) para a página do criar ficar com o modelo.

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Villa</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="p-3">
                <!-- <div asp-validation-summary="ModelOnly" class="text-danger"></div>      Um sumário dos erros personalizados, que aparece em cima -->

                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.Name" class="form-control border shadow"/>
                    <label asp-for="@Model.Name" class="ms-2"></label>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.Description" class="form-control border shadow" />
                    <label asp-for="@Model.Description" class="ms-2"></label>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.Price" class="form-control border shadow" />
                    <label asp-for="@Model.Price" class="ms-2"></label>
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.Sqft" class="form-control border shadow" />
                    <label asp-for="@Model.Sqft" class="ms-2"></label>
                    <span asp-validation-for="@Model.Sqft" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.Occupancy" class="form-control border shadow" />
                    <label asp-for="@Model.Occupancy" class="ms-2"></label>
                    <span asp-validation-for="@Model.Occupancy" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.ImageUrl" hidden class="form-control border shadow" />
                    <input asp-for="@Model.Image" class="form-control border shadow" />
                    <label asp-for="@Model.Image" class="ms-2"></label>
                    <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Para incluir as validações do lado do cliente -->
<!-- Só faz sentido acrescentar este script em páginas que têm formulários -->
@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}